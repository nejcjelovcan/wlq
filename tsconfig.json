{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
